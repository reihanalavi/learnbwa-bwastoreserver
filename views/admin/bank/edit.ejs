<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
        <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Ubah</li>
        </ol>
        </div>
    </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
    <div class="row">
        <div class="col-12">
        <!-- /.card-header -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Ubah Bank</h3>
            </div>
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>Nama Pemilik</label>
                        <input value="<%= bank.name %>" type="text" class="form-control" id="name" name="name" placeholder="Masukkan nama pemilik">
                    </div>
                    <div class="form-group">
                        <label>Nama Bank</label>
                        <input value="<%= bank.bankName %>" type="text" class="form-control" id="bank" name="bankName" placeholder="Masukkan nama bank">
                    </div>
                    <div class="form-group">
                        <label>Nomor Rekening</label>
                        <input value="<%= bank.noRekening %>" type="text" class="form-control" id="norek" name="noRekening" placeholder="Masukkan nomor rekening">
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>