<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
        <th>Nomor</th>
        <th>Nama Pemilik</th>
        <th>Nama Bank</th>
        <th>Nomor Rekening</th>
        <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < bank.length; i++) { %>
           <tr>
            <td><%=i + 1 %></td>
            <td><%=bank[i].name %></td>
            <td><%=bank[i].bankName %></td>
            <td><%=bank[i].noRekening %></td>
            <td>
                <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-warning">
                    <i class="nav-icon fas fa-edit"></i> Ubah</a>
                <form action="/bank/delete/<%= bank[i]._id %>?_method=DELETE" style="display: inline-block;" method="post">
                    <button href="" class="btn btn-danger">
                        <i class="nav-icon fas fa-trash"></i> Hapus</button>
                </form>
            </td>
           </tr> 
        <% } %>
    </tbody>
    <tfoot>
    </tfoot>
</table>